{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":semanticPrefixFix",
    ":maintainLockFilesWeekly",
    ":enableVulnerabilityAlerts",
    "helpers:pinGitHubActionDigests"
  ],
  "dependencyDashboard": true,
  "labels": ["ðŸ“¦ dependencies"],
  "timezone": "Europe/Paris",
  "schedule": ["before 6am on friday"],
  "rangeStrategy": "bump",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am on monday"],
    "dependencyDashboardApproval": true
  },
  "packageRules": [
    {
      "groupName": "linting",
      "matchPackagePatterns": [
        "^@antfu/eslint-config$",
        "^@nuxt/eslint$"
      ]
    },
    {
      "description": "Testing dependencies",
      "groupName": "testing",
      "matchPackagePatterns": [
        "^vitest$",
        "^@nuxt/test-utils"
      ]
    }
  ],
  "github-actions": {
    "enabled": true,
    "pinDigests": true
  }
}
